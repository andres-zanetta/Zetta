@page "/obras"
@page "/obras/{ObraId:int}"
@using Microsoft.AspNetCore.Components
@using Zetta.Shared.DTOS.Obra
@using Zetta.Shared.DTOS.Presupuesto
@using Zetta.Shared.DTOS.Cliente
@inject Zetta.Client.Servicios.IObraService ObraService
@inject Zetta.Client.Servicios.IClienteService ClienteService
@inject Zetta.Client.Servicios.IPresupuestoServices PresupuestoService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="d-flex justify-content-between align-items-center mb-3">
    <button class="btn btn-secondary" @onclick="VolverAlInicio">← Volver al Menú</button>
    <button class="btn btn-naranja" @onclick="AbrirModalNuevo">➕ Nueva Obra</button>
</div>

<div class="clientes-container">
    <header class="clientes-header text-center mb-4">
        <h1>Gestión de Obras</h1>
        <p class="subtitle">Ver, crear y administrar las obras relacionadas a presupuestos y clientes.</p>
    </header>

    @if (Cargando)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-warning" role="status"></div>
            <p class="mt-3">Cargando obras...</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="visually-hidden">ID</th>
                        <th>Cliente</th>
                        <th>Presupuesto</th>
                        <th>Estado</th>
                        <th>Fecha Inicio</th>
                        <th>Duración (días)</th>
                        <th>Comentarios</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Obras.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No hay obras registradas.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var o in Obras)
                        {
                            <tr data-obra-id="@o.Id">
                                <td class="visually-hidden">@o.Id</td>
                                <td>
                                    @* Lógica segura para obtener nombre del cliente *@
                                    @{
                                        var clienteNombre = "Desconocido";
                                        // Intentamos obtener el nombre directamente del DTO de Obra si el mapper lo trajo
                                        if (!string.IsNullOrEmpty(o.ClienteNombre))
                                        {
                                            clienteNombre = o.ClienteNombre;
                                        }
                                        else
                                        {
                                            // Fallback: buscar en la lista de clientes cargada
                                            var c = Clientes.FirstOrDefault(x => x.Id == o.ClienteId);
                                            if (c != null) clienteNombre = $"{c.Nombre} {c.Apellido}";
                                        }
                                    }
                                    @clienteNombre
                                </td>
                                <td>
                                    @{
                                        var pres = PresupuestosCache.FirstOrDefault(p => p.Id == o.PresupuestoId);
                                        var infoPres = pres != null ? $"{pres.RubroNombre} (${pres.Total})" : $"ID #{o.PresupuestoId}";
                                    }
                                    <span title="@infoPres">@infoPres</span>
                                </td>
                                <td><span class="badge bg-secondary">@o.EstadoObra</span></td>
                                <td>@o.FechaInicio.ToShortDateString()</td>
                                <td>
                                    @{
                                        var tiempo = pres?.TiempoAproxObra ?? "—";
                                    }
                                    @tiempo
                                </td>
                                <td>
                                    @if (o.Comentarios != null && o.Comentarios.Any())
                                    {
                                        <span title="@string.Join(", ", o.Comentarios)">@(o.Comentarios.Count) nota(s)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => AbrirModalEditar(o)">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarObra(o.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (MostrarModal)
{
    <div class="modal d-block" tabindex="-1" role="dialog" style="background: rgba(0,0,0,0.4);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content border-warning">
                <EditForm Model="ObraModel" OnValidSubmit="GuardarObra">
                    <DataAnnotationsValidator />
                    <div class="modal-header border-secondary">
                        <h5 class="modal-title text-naranja">@((Editando) ? "Editar Obra" : "Nueva Obra")</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                    </div>
                    <div class="modal-body">
                        <ValidationSummary class="text-danger" />
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">1. Seleccione un Cliente *</label>
                                @* Lógica restaurada de SelectedClientId *@
                                <InputSelect class="form-select border-secondary"
                                             @bind-Value="SelectedClientId"
                                             disabled="@Editando">
                                    <option value="0">Seleccione un cliente</option>
                                    @foreach (var c in Clientes)
                                    {
                                        <option value="@c.Id">@($"{c.Nombre} {c.Apellido}")</option>
                                    }
                            </InputSelect>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">2. Seleccione un Presupuesto *</label>
                            <InputSelect class="form-select border-secondary"
                                         @bind-Value="SelectedPresupuestoId"
                                         disabled="@(SelectedClientId == 0 || Editando)">
                                <option value="0">
                                    @(SelectedClientId == 0 ? "Seleccione cliente primero..." :
                                                                        (PresupuestosDelCliente.Any() ? "Seleccione..." : "Sin presupuestos"))
                                </option>
                                @foreach (var p in PresupuestosDelCliente)
                                    {
                                        <option value="@p.Id">@GetInfoPresupuesto(p)</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Estado</label>
                                <InputSelect class="form-select border-secondary" @bind-Value="ObraModel.EstadoObra">
                                    @foreach (var estado in Enum.GetValues(typeof(EstadoObra)).Cast<EstadoObra>())
                                    {
                                        <option value="@estado.ToString()">@estado.ToString()</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Fecha Inicio</label>
                                <InputDate class="form-control border-secondary" @bind-Value="ObraModel.FechaInicio" />
                            </div>

                            <div class="col-12 mt-4">
                                <h6 class="text-naranja border-bottom border-secondary pb-2">Seguimiento de Materiales</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Responsable de compra</label>
                                <InputSelect class="form-select border-secondary" @bind-Value="ObraModel.MaterialesCompradosPorUsuario">
                                    <option value="true">Cliente</option>
                                    <option value="false">Usuario (Yo)</option>
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Materiales Entregados en Obra</label>
                                <InputSelect class="form-select border-secondary" @bind-Value="ObraModel.MaterialesEntregados">
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </InputSelect>
                            </div>

                            <div class="col-12 mt-4">
                                <label class="form-label">Comentarios</label>
                                <InputTextArea rows="4" class="form-control border-secondary" @bind-Value="ComentariosTexto" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                        <button type="submit" class="btn btn-naranja">@(Editando ? "Actualizar" : "Guardar")</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public int? ObraId { get; set; }

    // Listas inicializadas para seguridad
    private List<GET_ObraDTO> Obras { get; set; } = new();
    private List<GET_ClienteDTO> Clientes { get; set; } = new();
    // Cache global de presupuestos para la tabla
    private List<GET_PresupuestoDTO> PresupuestosCache { get; set; } = new();

    private bool Cargando = true;
    private bool MostrarModal = false;
    private bool Editando = false;

    private PUT_ObraDTO ObraModel = new PUT_ObraDTO();
    private string ComentariosTexto = string.Empty;
    private int ObraEditarId = 0;

    private bool _cargandoEdicion = false;
    private List<GET_PresupuestoDTO> PresupuestosDelCliente { get; set; } = new();

    // Lógica original restaurada para el selector de cliente
    private int _selectedClientId;
    private int SelectedClientId
    {
        get => _selectedClientId;
        set
        {
            _selectedClientId = value;
            ObraModel.ClienteId = value;

            if (Editando || _cargandoEdicion) return;

            PresupuestosDelCliente.Clear();
            SelectedPresupuestoId = 0;

            if (value > 0)
            {
                // Intento buscar en cache primero
                var presupuestosEnCache = PresupuestosCache.Where(p => p.ClienteId == value).ToList();

                if (presupuestosEnCache.Any())
                {
                    PresupuestosDelCliente = presupuestosEnCache.OrderByDescending(p => p.FechaCreacion).ToList();
                }
                else
                {
                    // Si no está en cache, invoco servicio
                    _ = InvokeAsync(async () =>
                    {
                        try
                        {
                            var clienteConDetalle = await ClienteService.GetById(value);
                            if (clienteConDetalle?.Presupuestos != null)
                            {
                                PresupuestosDelCliente = clienteConDetalle.Presupuestos
                                    .OrderByDescending(p => p.FechaCreacion)
                                    .ToList();
                                StateHasChanged();
                            }
                        }
                        catch (Exception ex)
                        {
                            Console.WriteLine($"Error cargando presupuestos: {ex.Message}");
                        }
                    });
                }
            }
        }
    }

    // Lógica original restaurada para el selector de presupuesto
    private int _selectedPresupuestoId;
    private int SelectedPresupuestoId
    {
        get => _selectedPresupuestoId;
        set
        {
            _selectedPresupuestoId = value;
            ObraModel.PresupuestoId = value;

            if (value > 0 && !Editando)
            {
                var presupuesto = PresupuestosDelCliente.FirstOrDefault(p => p.Id == value);
                if (presupuesto != null && !presupuesto.Aceptado)
                {
                    bool estaVencido = false;
                    if (int.TryParse(presupuesto.ValidacionDias, out int diasValidez))
                    {
                        var fechaVencimiento = presupuesto.FechaCreacion.Date.AddDays(diasValidez);
                        if (DateTime.Today > fechaVencimiento) estaVencido = true;
                    }
                    string tipoEstado = estaVencido ? "VENCIDO" : "PENDIENTE";
                    _ = InvokeAsync(() => VerificarAceptacionPresupuesto(tipoEstado));
                }
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosIniciales();

        if (ObraId.HasValue)
        {
            _cargandoEdicion = true;
            try
            {
                var dto = await ObraService.GetByIdAsync(ObraId.Value);
                if (dto != null)
                {
                    await PrepararEdicion(dto);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error cargando obra: {ex.Message}");
            }
            finally
            {
                _cargandoEdicion = false;
            }
        }
    }

    private async Task CargarDatosIniciales()
    {
        Cargando = true;
        try
        {
            // Cargamos todo junto para eficiencia
            var t1 = ObraService.GetAllAsync();
            var t2 = ClienteService.GetAll();
            var t3 = PresupuestoService.GetAll();

            await Task.WhenAll(t1, t2, t3);

            Obras = (await t1) ?? new();
            Clientes = (await t2) ?? new();
            PresupuestosCache = (await t3) ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
            // Evitamos alert bloqueante en inicio
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task PrepararEdicion(GET_ObraDTO dto)
    {
        ObraModel = new PUT_ObraDTO
        {
            ClienteId = dto.ClienteId,
            PresupuestoId = dto.PresupuestoId,
            FechaInicio = dto.FechaInicio,
            EstadoObra = dto.EstadoObra,
            Comentarios = dto.Comentarios,
            MaterialesCompradosPorUsuario = dto.MaterialesCompradosPorUsuario,
            MaterialesEntregados = dto.MaterialesEntregados
        };

        _selectedClientId = dto.ClienteId;

        // Cargar presupuestos para el combo
        var presupuestos = PresupuestosCache.Where(p => p.ClienteId == dto.ClienteId).ToList();
        if (!presupuestos.Any())
        {
            var c = await ClienteService.GetById(dto.ClienteId);
            if (c?.Presupuestos != null) presupuestos = c.Presupuestos.ToList();
        }
        PresupuestosDelCliente = presupuestos.OrderByDescending(p => p.FechaCreacion).ToList();

        _selectedPresupuestoId = dto.PresupuestoId;

        Editando = true;
        ObraEditarId = dto.Id;
        ComentariosTexto = dto.Comentarios != null ? string.Join("\n", dto.Comentarios) : string.Empty;
        MostrarModal = true;
    }

    private void AbrirModalNuevo()
    {
        Editando = false;
        ObraModel = new PUT_ObraDTO
        {
            FechaInicio = DateTime.Today,
            EstadoObra = EstadoObra.Iniciada.ToString(),
            ClienteId = 0,
            PresupuestoId = 0
        };
        SelectedClientId = 0;
        SelectedPresupuestoId = 0;
        ComentariosTexto = string.Empty;
        PresupuestosDelCliente.Clear();
        MostrarModal = true;
    }

    private async Task AbrirModalEditar(GET_ObraDTO dto)
    {
        await PrepararEdicion(dto);
    }

    private async Task GuardarObra()
    {
        try
        {
            if (ObraModel.ClienteId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "⚠️ Debe seleccionar un cliente.");
                return;
            }
            if (ObraModel.PresupuestoId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "⚠️ Debe seleccionar un presupuesto.");
                return;
            }

            ObraModel.Comentarios = ComentariosTexto?
                .Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries)
                .Select(x => x.Trim()).ToList();

            if (Editando)
            {
                await ObraService.UpdateAsync(ObraEditarId, ObraModel);
                await JSRuntime.InvokeVoidAsync("alert", "✅ Obra actualizada correctamente.");
            }
            else
            {
                var postDto = new POST_ObraDTO
                {
                    ClienteId = ObraModel.ClienteId,
                    PresupuestoId = ObraModel.PresupuestoId,
                    FechaInicio = ObraModel.FechaInicio,
                    EstadoObra = ObraModel.EstadoObra,
                    MaterialesCompradosPorUsuario = ObraModel.MaterialesCompradosPorUsuario,
                    MaterialesEntregados = ObraModel.MaterialesEntregados
                };
                await ObraService.CreateAsync(postDto);
                await JSRuntime.InvokeVoidAsync("alert", "✅ Obra creada correctamente.");
            }

            CerrarModal();
            await CargarDatosIniciales();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error al guardar: {ex.Message}");
        }
    }

    private async Task EliminarObra(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "¿Estás seguro de que querés eliminar esta obra?"))
        {
            try
            {
                await ObraService.DeleteAsync(id);
                Obras.RemoveAll(o => o.Id == id);
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error eliminando obra: {ex.Message}");
            }
        }
    }

    private async Task VerificarAceptacionPresupuesto(string tipoEstado)
    {
        string mensaje = $"El presupuesto seleccionado está '{tipoEstado}' y no ha sido aceptado formalmente.\n\n¿Desea continuar?";
        bool confirmar = await JSRuntime.InvokeAsync<bool>("confirm", mensaje);
        if (!confirmar)
        {
            ObraModel.PresupuestoId = 0;
            SelectedPresupuestoId = 0;
            StateHasChanged();
        }
    }

    private string GetInfoPresupuesto(GET_PresupuestoDTO p)
    {
        // Muestra Rubro y Total para que sea fácil de identificar
        return $"{p.RubroNombre ?? "Sin Rubro"} (${p.Total:N0}) - {p.FechaCreacion:dd/MM/yy}";
    }

    private void CerrarModal() => MostrarModal = false;
    private void VolverAlInicio() => Navigation.NavigateTo("/");

    public enum EstadoObra { Iniciada, EnProceso, Finalizada }

    // Validaciones personalizadas que tenías
    private bool EsValorInvalido(int numero)
    {
        var numStr = numero.ToString();
        if (numStr.Distinct().Count() == 1 && numStr.Length >= 4) return true;
        if (numStr.Length >= 4)
        {
            var mitad = numStr.Length / 2;
            var primera = numStr.Substring(0, mitad);
            var segunda = numStr.Substring(mitad);
            if (primera == segunda) return true;
        }
        return false;
    }
    private bool EsTextoInvalido(string texto)
    {
        if (string.IsNullOrWhiteSpace(texto)) return false;
        if (texto.GroupBy(c => c).Any(g => g.Count() > 10)) return true;
        string[] patronesInvalidos = { "aaaa", "1111", "zzzz", "xxxx", "1234" };
        return patronesInvalidos.Any(p => texto.Contains(p, StringComparison.OrdinalIgnoreCase));
    }
}