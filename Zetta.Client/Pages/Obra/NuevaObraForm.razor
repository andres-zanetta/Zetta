@page "/obras"
@using Zetta.Shared.DTOS.Obra
@using Zetta.Shared.DTOS.Presupuesto
@using Zetta.Shared.DTOS.Cliente
@inject Zetta.Client.Servicios.IObraService ObraService
@inject Zetta.Client.Servicios.IClienteService ClienteService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="d-flex justify-content-between align-items-center mb-3">
    <button class="btn btn-secondary" @onclick="VolverAlInicio">← Volver al Menú</button>
    <button class="btn btn-naranja" @onclick="AbrirModalNuevo">➕ Nueva Obra</button>
</div>

<div class="clientes-container">
    <header class="clientes-header text-center mb-4">
        <h1>Gestión de Obras</h1>
        <p class="subtitle">Ver, crear y administrar las obras relacionadas a presupuestos y clientes.</p>
    </header>

    @if (Cargando)
    {
        <p>Cargando obras...</p>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table align-middle">
                <thead class="table-dark">
                    <tr> @* sombras *@
                        <th class="visually-hidden">ID</th>
                        <th>Cliente</th>
                        <th>PresupuestoId</th>
                        <th>Estado</th>
                        <th>Fecha Inicio</th>
                        <th>Duración (días)</th>
                        <th>Comentarios</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Obras == null || Obras.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No hay obras registradas.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var o in Obras)
                        {
                            <tr>
                                <td class="visually-hidden">@o.Id</td>
                                <td>
                                    @{
                                        var pres = Clientes
                                        .SelectMany(c => c.Presupuestos ?? new List<GET_PresupuestoDTO>())
                                        .FirstOrDefault(p => p.Id == o.PresupuestoId);
                                        var cliente = pres != null
                                        ? Clientes.FirstOrDefault(c => c.Id == pres.ClienteId)
                                        : null;
                                        var nombreCliente = cliente != null
                                        ? $"{cliente.Nombre} {cliente.Apellido}"
                                        : $"— (Id: {pres?.ClienteId ?? o.ClienteId})";
                                    }
                                    @nombreCliente
                                </td>
                                <td>@o.PresupuestoId</td>
                                <td>@o.EstadoObra</td>
                                <td>@o.FechaInicio.ToShortDateString()</td>
                                <td>
                                    @{
                                        var presupuesto = Clientes
                                        .SelectMany(c => c.Presupuestos ?? new List<GET_PresupuestoDTO>())
                                        .FirstOrDefault(p => p.Id == o.PresupuestoId);
                                        var tiempoAproxObra = presupuesto?.TiempoAproxObra ?? "—";
                                    }
                                    @tiempoAproxObra
                                </td>
                                <td>
                                    @if (o.Comentarios != null && o.Comentarios.Any())
                                    {
                                        <span title="@string.Join(", ", o.Comentarios)">@(o.Comentarios.Count) comentario(s)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => AbrirModalEditar(o)">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarObra(o.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@* --- MODAL CORREGIDO --- *@
@if (MostrarModal)
{
    <div class="modal d-block" tabindex="-1" role="dialog" style="background: rgba(0,0,0,0.4);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                @* El EditForm AHORA está aquí dentro *@
                <EditForm Model="ObraModel" OnValidSubmit="GuardarObra">
                    <DataAnnotationsValidator />
                    <div class="modal-header">
                        <h5 class="modal-title">@((Editando) ? "Editar Obra" : "Nueva Obra")</h5>
                        <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                    </div>
                    <div class="modal-body">
                        <ValidationSummary />
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">1. Seleccione un Cliente *</label>
                                @* Se usa @bind-Value a la propiedad intermediaria *@
                                <InputSelect class="form-select" @bind-Value="SelectedClientId" disabled="@Editando">
                                    <option value="0">Seleccione un cliente</option>
                                    @foreach (var c in Clientes)
                                    {
                                        <option value="@c.Id">@($"{c.Nombre} {c.Apellido}")</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">2. Seleccione un Presupuesto *</label>
                                @* Se usa @bind-Value a la propiedad intermediaria *@
                                <InputSelect class="form-select" @bind-Value="SelectedPresupuestoId" disabled="@(ObraModel.ClienteId == 0 || Editando)">
                                    <option value="0">... (Seleccione un cliente primero) ...</option>
                                    @foreach (var p in PresupuestosDelCliente)
                                    {
                                        <option value="@p.Id">@GetInfoPresupuesto(p)</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Estado</label>
                                <InputSelect class="form-select" @bind-Value="ObraModel.EstadoObra">
                                    @foreach (var estado in Enum.GetValues(typeof(EstadoObra)).Cast<EstadoObra>())
                                    {
                                        <option value="@estado.ToString()">@estado.ToString()</option>
                                    }
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Fecha Inicio</label>
                                <InputDate class="form-control" @bind-Value="ObraModel.FechaInicio" />
                            </div>

                            <div class="col-12 mt-4">
                                <h6 class="text-naranja">Seguimiento de Materiales</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Materiales Comprados (Usuario)</label>
                                <InputSelect class="form-select" @bind-Value="ObraModel.MaterialesCompradosPorUsuario">
                                    <option value="">Pendiente / N/A</option>
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Materiales Entregados en Obra</label>
                                <InputSelect class="form-select" @bind-Value="ObraModel.MaterialesEntregados">
                                    <option value="">Pendiente / N/A</option>
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </InputSelect>
                            </div>

                            <div class="col-12 mt-4">
                                <label class="form-label">Comentarios (uno por línea)</label>
                                <InputTextArea rows="4" class="form-control" @bind-Value="ComentariosTexto" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                        <button type="submit" class="btn btn-naranja">@(Editando ? "Actualizar" : "Guardar")</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<GET_ObraDTO> Obras { get; set; } = new();
    private List<GET_ClienteDTO> Clientes { get; set; } = new();
    private bool Cargando = true;
    private bool MostrarModal = false;
    private bool Editando = false;

    private PUT_ObraDTO ObraModel = new PUT_ObraDTO();
    private string ComentariosTexto = string.Empty;
    private int ObraEditarId = 0;

    private List<GET_PresupuestoDTO> PresupuestosDelCliente { get; set; } = new();

    // --- PROPIEDAD INTERMEDIARIA PARA EL CLIENTE ---
    private int SelectedClientId
    {
        get => ObraModel.ClienteId;
        set
        {
            ObraModel.ClienteId = value;

            // Esta lógica solo debe ejecutarse si NO estamos editando
            if (!Editando)
            {
                PresupuestosDelCliente.Clear();
                ObraModel.PresupuestoId = 0; // Resetear presupuesto
                if (value > 0)
                {
                    var cliente = Clientes.FirstOrDefault(c => c.Id == value);
                    if (cliente != null && cliente.Presupuestos != null)
                    {
                        PresupuestosDelCliente = cliente.Presupuestos
                                                    .OrderByDescending(p => p.FechaCreacion)
                                                    .ToList();
                    }
                }
            }
            // StateHasChanged() no es necesario aquí porque el @bind-Value lo maneja
        }
    }

    // --- PROPIEDAD INTERMEDIARIA PARA EL PRESUPUESTO ---
    private int SelectedPresupuestoId
    {
        get => ObraModel.PresupuestoId;
        set
        {
            ObraModel.PresupuestoId = value;

            // La lógica de la alerta solo se aplica al crear (Editando = false)
            if (value > 0 && !Editando)
            {
                var presupuesto = PresupuestosDelCliente.FirstOrDefault(p => p.Id == value);
                if (presupuesto != null && !presupuesto.Aceptado)
                {
                    bool estaVencido = false;
                    if (int.TryParse(presupuesto.ValidacionDias, out int diasValidez) && presupuesto.FechaCreacion.Year > 1900)
                    {
                        var fechaVencimiento = presupuesto.FechaCreacion.Date.AddDays(diasValidez);
                        if (DateTime.Today > fechaVencimiento) estaVencido = true;
                    }
                    string tipoEstado = estaVencido ? "VENCIDO" : "PENDIENTE";

                    InvokeAsync(() => VerificarAceptacionPresupuesto(tipoEstado));
                }
            }
        }
    }

    private async Task VerificarAceptacionPresupuesto(string tipoEstado)
    {
        string mensaje = $"El presupuesto seleccionado está '{tipoEstado}' y no ha sido aceptado formalmente.\n\n" +
                         "¿Desea continuar y crear la obra de todos modos?";
        bool confirmar = await JSRuntime.InvokeAsync<bool>("confirm", mensaje);
        if (!confirmar)
        {
            ObraModel.PresupuestoId = 0;
            StateHasChanged(); // Forzar actualización de la UI
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosIniciales();
    }

    private async Task CargarDatosIniciales()
    {
        Cargando = true;
        try
        {
            Obras = await ObraService.GetAllAsync() ?? new List<GET_ObraDTO>();
            Clientes = await ClienteService.GetAll() ?? new List<GET_ClienteDTO>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error al cargar datos: {ex.Message}");
        }
        Cargando = false;
        StateHasChanged();
    }

    private void AbrirModalNuevo()
    {
        Editando = false; // Asegurarse de que Editando sea false
        ObraModel = new PUT_ObraDTO
        {
            FechaInicio = DateTime.Today,
            EstadoObra = EstadoObra.Iniciada.ToString(),
            ClienteId = 0,
            MaterialesCompradosPorUsuario = null,
            MaterialesEntregados = null
        };
        ComentariosTexto = string.Empty;
        PresupuestosDelCliente.Clear();
        MostrarModal = true;
    }

    private void AbrirModalEditar(GET_ObraDTO dto)
    {
        Editando = true; // Establecer Editando en true
        ObraEditarId = dto.Id;
        ComentariosTexto = dto.Comentarios != null ? string.Join("\n", dto.Comentarios) : string.Empty;

        // Poblar la lista de presupuestos ANTES de asignar el modelo
        var cliente = Clientes.FirstOrDefault(c => c.Id == dto.ClienteId);
        if (cliente != null && cliente.Presupuestos != null)
        {
            PresupuestosDelCliente = cliente.Presupuestos
                                        .OrderByDescending(p => p.FechaCreacion)
                                        .ToList();
        }

        ObraModel = new PUT_ObraDTO
        {
            ClienteId = dto.ClienteId,
            PresupuestoId = dto.PresupuestoId,
            FechaInicio = dto.FechaInicio,
            EstadoObra = dto.EstadoObra,
            Comentarios = dto.Comentarios,
            MaterialesCompradosPorUsuario = dto.MaterialesCompradosPorUsuario,
            MaterialesEntregados = dto.MaterialesEntregados
        };

        MostrarModal = true;
    }

    // --- ESTOS MÉTODOS @onchange FUERON ELIMINADOS ---
    // private async Task OnClienteChanged(ChangeEventArgs e) { ... }
    // private async Task OnPresupuestoChanged(ChangeEventArgs e) { ... }
    // La lógica ahora está en las propiedades 'set'


    private string GetInfoPresupuesto(GET_PresupuestoDTO p)
    {
        if (p.FechaCreacion.Year < 1900)
        {
            return $"ID: {p.Id} (Fecha inválida) - {(p.Aceptado ? "Aceptado" : "Pendiente")}";
        }
        int diasValidez = 0;
        int.TryParse(p.ValidacionDias, out diasValidez);
        var fechaVencimiento = p.FechaCreacion.AddDays(diasValidez);
        var diasRestantes = (fechaVencimiento.Date - DateTime.Today).Days;

        string estadoValidez;
        if (p.Aceptado) { estadoValidez = "Aceptado"; }
        else if (diasRestantes < 0) { estadoValidez = "Vencido"; }
        else { estadoValidez = $"{diasRestantes} días rest."; }

        return $"ID: {p.Id} (Creado: {p.FechaCreacion.ToShortDateString()}) - {estadoValidez}";
    }

    private async Task GuardarObra()
    {
        try
        {
            if (ObraModel.ClienteId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "⚠️ Debe seleccionar un cliente.");
                return;
            }
            if (ObraModel.PresupuestoId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "⚠️ Debe seleccionar un presupuesto.");
                return;
            }

            ObraModel.Comentarios = ComentariosTexto?
                .Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries)
                .Select(x => x.Trim()).ToList();

            if (Editando)
            {
                await ObraService.UpdateAsync(ObraEditarId, ObraModel);
                await JSRuntime.InvokeVoidAsync("alert", "✅ Obra actualizada correctamente.");
            }
            else
            {
                var postDto = new POST_ObraDTO
                {
                    ClienteId = ObraModel.ClienteId,
                    PresupuestoId = ObraModel.PresupuestoId,
                    FechaInicio = ObraModel.FechaInicio,
                    EstadoObra = ObraModel.EstadoObra,
                    MaterialesCompradosPorUsuario = ObraModel.MaterialesCompradosPorUsuario,
                    MaterialesEntregados = ObraModel.MaterialesEntregados
                };
                var id = await ObraService.CreateAsync(postDto);
                await JSRuntime.InvokeVoidAsync("alert", "✅ Obra creada correctamente.");
            }

            CerrarModal();
            await CargarDatosIniciales();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error guardando obra: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error al guardar: {ex.Message}");
        }
    }

    private async Task EliminarObra(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "¿Estás seguro de que querés eliminar esta obra?"))
        {
            try
            {
                await ObraService.DeleteAsync(id);
                Obras.RemoveAll(o => o.Id == id);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error eliminando obra: {ex.Message}");
                await JSRuntime.InvokeVoidAsync("alert", $"Error eliminando obra: {ex.Message}");
            }
        }
    }

    private void CerrarModal()
    {
        MostrarModal = false;
        Editando = false;
        ObraEditarId = 0;
        ObraModel = new PUT_ObraDTO();
        ComentariosTexto = string.Empty;
        PresupuestosDelCliente.Clear();
    }

    private void VolverAlInicio() => Navigation.NavigateTo("/");

    private int DuracionEnDias(DateTime fechaInicio)
    {
        var diff = DateTime.Now.Date - fechaInicio.Date;
        return Math.Max(0, diff.Days);
    }

    public enum EstadoObra
    {
        Iniciada,
        EnProceso,
        Finalizada
    }

    private bool EsValorInvalido(int numero)
    {
        var numStr = numero.ToString();
        if (numStr.Distinct().Count() == 1 && numStr.Length >= 4) return true;
        if (numStr.Length >= 4)
        {
            var mitad = numStr.Length / 2;
            var primera = numStr.Substring(0, mitad);
            var segunda = numStr.Substring(mitad);
            if (primera == segunda) return true;
        }
        return false;
    }
    private bool EsTextoInvalido(string texto)
    {
        if (string.IsNullOrWhiteSpace(texto)) return false;
        if (texto.GroupBy(c => c).Any(g => g.Count() > 10)) return true;
        string[] patronesInvalidos = { "aaaa", "1111", "zzzz", "xxxx", "1234" };
        return patronesInvalidos.Any(p => texto.Contains(p, StringComparison.OrdinalIgnoreCase));
    }
}